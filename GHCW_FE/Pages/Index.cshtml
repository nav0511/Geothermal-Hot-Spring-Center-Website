@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-md-3">Tham quan & Nghỉ dưỡng</h4>
                        <h1 class="display-3 text-white mb-md-4">Trải nghiệm nghỉ dưỡng cao cấp</h1>
                        <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">Đặt vé ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Booking Start -->
<div class="container-fluid booking mt-5 pb-5">
    <div class="container pb-5">
        <div class="bg-light shadow" style="padding: 30px;">
            <div class="d-flex justify-content-center align-items-center" style="min-height:60px;">
                <div class="d-flex align-items-center">
                    <label>Chọn ngày sử dụng dịch vụ:&nbsp;&nbsp;</label>
                    <div class="date" id="date1" data-target-input="nearest">
                        <input type="text" class="form-control p-4 datetimepicker-input" placeholder="Chọn ngày" data-target="#date1" data-toggle="datetimepicker" style="width: 100%;" />
                    </div>
                </div>
                <div class="ml-2">
                    <button class="btn btn-primary btn-block" type="submit" style="height: 47px;">Đặt vé</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container pt-5">
        <div class="row">
            <div class="col-lg-6" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100" src="img/about.jpg" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 pt-5 pb-lg-5">
                <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                    <h1 class="mb-3">Mang đến cho bạn trải nghiệm nghỉ dưỡng tuyệt vời</h1>
                    <div class="row mb-4">
                        <div class="col-6">
                            <img class="img-fluid" src="/img/about-3.jpg" alt="">
                        </div>
                        <div class="col-6">
                            <img class="img-fluid" src="/img/about-2.jpg" alt="">
                        </div>
                    </div>
                    <a href="/About" class="btn btn-primary mt-1">Tìm hiểu thêm</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About End -->
