@using GHCW_FE.DTOs
@using System.Text.Json
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trung tâm khoáng nóng địa chất</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/layoutManagement.css" asp-append-version="true" />
</head>
<body>
    <!-- Profile Menu HTML -->
    @if (Context.Session.GetString("acc") != null)
    {
        var account = JsonSerializer.Deserialize<AccountDTO>(Context.Session.GetString("acc"));
        <div class="profile-menu">
            <div id="profileIcon">
                <label>@account.Name</label>
                <img src="https://www.w3schools.com/w3images/avatar2.png" alt="Profile" class="profile-icon">
            </div>
            <div id="dropdownMenu" class="dropdown-content">
                <a class="dropdown-item" asp-page="/Index">Trang chủ</a>
                <a class="dropdown-item" asp-page="/Authentications/UserProfile">Thông tin cá nhân</a>
                <form method="post" class="dropdown-item" asp-page="/Authentications/Login" asp-page-handler="LogOut" style="width:100%">
                    <button type="submit" style="border:none; background:none; padding:0; text-align:left;">Đăng xuất</button>
                </form>
            </div>
        </div>
    }

    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>GH<span style="color: green">CW</span></h2>
            </div>
            <br />
            <nav>
                <ul>
                    <li class="@(ViewData["ActivePage"] as string == "/Admin/ScheduleManagement" ? "active" : "")">
                        <a asp-page="/Admin/ScheduleManagement"><i class="fas fa-calendar"></i> Quản lý lịch trình</a>
                    </li>
                    <li class="@(ViewData["ActivePage"] as string == "/Admin/ReservationList" ? "active" : "")">
                        <a asp-page="/Admin/ReservationList"><i class="fas fa-clock"></i> Danh sách đặt trước</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>
</body>
</html>
