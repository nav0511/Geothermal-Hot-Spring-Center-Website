@page
@using GHCW_FE.DTOs
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@model GHCW_FE.Pages.Admin.UserManagementModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "_LayoutManagement";
}

<header class="page-header">
    <h2>Quản lý người dùng</h2>
    <button class="btn-add" onclick="window.location.href='/Admin/AddAccount'">+ Thêm tài khoản mới</button>
</header>

<div class="search-container">
    @* <h3>Tất cả người dùng</h3> *@
    <input type="text" placeholder="Tìm kiếm...">
    <select>
        <option value="0">Sắp xếp: chọn tùy chọn</option>
        <option value="1">A-Z</option>
        <option value="2">Z-A</option>
        <option value="3">Active</option>
        <option value="4">Inactive</option>
    </select>
</div>

<div>
    @if(Model.Accounts == null || Model.Accounts.Count == 0)
    {
        <p>Danh sách trống</p>
    }
    else
    {<table class="user-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Họ và tên</th>
                    <th>Giới tính</th>
                    <th>Vai trò</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Nhận thông báo qua email</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var acc in Model.Accounts)
                {
                    <tr onclick="window.location.href='/Admin/UserDetails'">
                        <td>@acc.Id</td>
                        <td>@acc.Name</td>
                        <td>@(acc.Gender == true ? "Nam" : "Nữ")</td>
                        <td>
                            @switch (acc.Role)
                            {
                                case 0:
                                    <p>Quản trị</p>
                                    break;
                                case 1:
                                    <p>Quản lý</p>
                                    break;
                                case 2:
                                    <p>Marketing</p>
                                    break;
                                case 3:
                                    <p>Sale</p>
                                    break;
                                case 4:
                                    <p>Lễ tân</p>
                                    break;
                                case 5:
                                    <p>Khách hàng</p>
                                    break;
                                default:
                                    <p>Unknown Role</p>
                                    break;
                            }
                        </td>
                        <td>@acc.PhoneNumber</td>
                        <td>@acc.Email</td>
                        <td>@acc.Address</td>
                        <td>@(acc.IsEmailNotify == true ? "Có" : "Không")</td>
                        <td>
                            @if(acc.IsActive == true)
                            {
                                <span class="status active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status inactive">Không hoạt động</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="pagination">
    <a href="#">«</a>
    <a href="#" class="active">1</a>
    <a href="#">2</a>
    <a href="#">3</a>
    <a href="#">»</a>
</div>


<script>
    // Get the profile icon and dropdown elements
    var profileIcon = document.getElementById("profileIcon");
    var dropdownMenu = document.getElementById("dropdownMenu");
    var profileMenu = document.querySelector(".profile-menu");

    // Toggle dropdown when the profile icon is clicked
    profileIcon.addEventListener("click", function (event) {
        event.stopPropagation();
        profileMenu.classList.toggle("show");
    });

    // Close the dropdown if user clicks outside
    window.addEventListener("click", function (event) {
        if (!event.target.matches('.profile-icon') && profileMenu.classList.contains('show')) {
            profileMenu.classList.remove('show');
        }
    });
</script>

<style>


    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
        height: 100vh;
