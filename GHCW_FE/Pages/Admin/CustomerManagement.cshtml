    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}


<div class="search-container">
    @* <h3>Tất cả người dùng</h3> *@
    <input type="text" placeholder="Tìm kiếm...">
    <select>
        <option value="0">Sắp xếp: chọn tùy chọn</option>
        <option value="1">A-Z</option>
        <option value="2">Z-A</option>
        <option value="3">Active</option>
        <option value="4">Inactive</option>
    </select>
</div>

<div>
    @if (Model.Customers == null || Model.Customers.Count == 0)
    {
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["ErrorMessage"]
            </div>
        }
    }
    else
    {
        <table class="user-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Họ và tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Thông báo qua email</th>
                    <th>Trạng thái</th>
                    @if (HttpContext.Session.GetString("acc") != null)
                    {
                        var account = JsonSerializer.Deserialize<AccountDTO>(HttpContext.Session.GetString("acc"));
                        @if (account.Role == 0)
                        {
                            <th>Tùy chọn</th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var cus in Model.Customers)
                {
                    <tr onclick="window.location.href='/Admin/UserDetails/?id=@cus.Id'">
                        <td>@cus.Id</td>
                        <td>@cus.PhoneNumber</td>
                        <td>@cus.Email</td>
                        @if (HttpContext.Session.GetString("acc") != null)
                        {
                            var account = JsonSerializer.Deserialize<AccountDTO>(HttpContext.Session.GetString("acc"));
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="pagination">
    <a href="#">«</a>
    <a href="#" class="active">1</a>
    <a href="#">2</a>
    <a href="#">3</a>
    <a href="#">»</a>
</div>


<script>
    // Get the profile icon and dropdown elements
    var profileIcon = document.getElementById("profileIcon");
    var dropdownMenu = document.getElementById("dropdownMenu");
    var profileMenu = document.querySelector(".profile-menu");

    // Toggle dropdown when the profile icon is clicked
    profileIcon.addEventListener("click", function (event) {
        event.stopPropagation();
        profileMenu.classList.toggle("show");
    });

    // Close the dropdown if user clicks outside
    window.addEventListener("click", function (event) {
        if (!event.target.matches('.profile-icon') && profileMenu.classList.contains('show')) {
            profileMenu.classList.remove('show');
        }
    });
</script>

