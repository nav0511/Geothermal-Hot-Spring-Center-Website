@page
@using GHCW_FE.DTOs
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@model GHCW_FE.Pages.Admin.ServiceManagementModel
@{
    ViewData["Title"] = "Quản lí dịch vụ";
    Layout = "_LayoutManagement";
}


<!-- Main Content -->
<header class="page-header">
    <h2>Quản lý dịch vụ</h2>
    <button class="btn-add" onclick="window.location.href='/Admin/AddService'">+ Thêm dịch vụ mới</button>
</header>

<div class="search-container">
    <input type="text" placeholder="Tìm kiếm...">
    <select>
        <option value="0">Sắp xếp: chọn tùy chọn</option>
        <option value="1">A-Z</option>
        <option value="2">Z-A</option>
        <option value="3">Active</option>
        <option value="4">Inactive</option>
    </select>
</div>

<table class="user-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên dịch vụ</th>
            <th>Thời gian</th>
            <th>Giá</th>
            @*                         <th>IsAdult</th>
            *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.ServiceDTOs)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Name</td>
                <td>@service.Time</td>
                <td>@service.Price</td>

                <td>
                    <button class="status active" onclick="window.location.href='/Admin/EditService?id=@service.Id'">Sửa</button>
                    <form method="post" asp-page-handler="DeleteService" asp-route-id="@service.Id" style="display:inline;">
                        <button type="submit" class="status inactive" onclick="return confirm('Bạn có chắc chắn muốn xóa dịch vụ này?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a href="?pageNumber=@(Model.CurrentPage - 1)">«</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="?pageNumber=@i" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="?pageNumber=@(Model.CurrentPage + 1)">»</a>
    }
</div>

<script>
    // Get the profile icon and dropdown elements
    var profileIcon = document.getElementById("profileIcon");
    var dropdownMenu = document.getElementById("dropdownMenu");
    var profileMenu = document.querySelector(".profile-menu");

    // Toggle dropdown when the profile icon is clicked
    profileIcon.addEventListener("click", function (event) {
        event.stopPropagation();
        profileMenu.classList.toggle("show");
    });

    // Close the dropdown if user clicks outside
    window.addEventListener("click", function (event) {
        if (!event.target.matches('.profile-icon') && profileMenu.classList.contains('show')) {
            profileMenu.classList.remove('show');
        }
    });


</script>

