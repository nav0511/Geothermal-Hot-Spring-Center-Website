@page
@using GHCW_FE.DTOs
@model GHCW_FE.Pages.News.DetailModel
@{
}

<!-- News Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-8">
                @if (Model.News != null)
                {
                    <!-- News Detail Start -->
                    <div class="pb-3">
                        <div class="">
                            <div class="d-flex m-3">
                                <a class="text-primary text-uppercase text-decoration-none" asp-page="/News/Index">Tin tức</a>
                                <span class="text-primary px-2">|</span>
                                <a class="text-black text-uppercase text-decoration-none" href="">@Model.News.Title</a>
                            </div>
                            <div class="position-relative">
                                <img class="img-fluid w-100" src="@Model.News.Image" alt="">
                                <div class="blog-date">
                                    <h6 class="font-weight-bold text-white mb-n1">
                                        @Model.News.UploadDate.ToString("dd/MM")
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 bg-white" style="padding: 30px;">
                            <h2 class="mb-3">@Model.News.Title</h2>
                            <p>
                                @Model.News.Description
                            </p>
                        </div>
                    </div>
                    <!-- News Detail End -->
                }

                else
                {
                    <h2 class="text-primary">
                        @Model.Message
                    </h2>
                }
            </div>
            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px; padding-top: 3rem;">Các tin tức khác</h4>
                    @foreach (NewsDTO n in Model.NewsDtos)
                    {
                        <a class="d-flex align-items-center text-decoration-none bg-white mb-3" asp-route-Id="@n.Id">
                            <img class="img-fluid" src="@n.Image" alt="" style="width: 100px; height: 80px;">
                            <div class="pl-3 m-1">
                                <h6>@n.Title</h6>
                                <small>
                                    @n.UploadDate.ToString("dd/MM/yyyy");
                                </small>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- News End -->