@page
@using GHCW_FE.DTOs
@model GHCW_FE.Pages.Promotions.DetailModel
@{
}

<!-- News Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-8">
                <!-- News Detail Start -->
                @if (Model.Discount != null && Model.News != null)
                {
                    <div class="pb-3">
                        <div class="">
                            <div class="d-flex m-3">
                                <a class="text-primary text-uppercase text-decoration-none" asp-page="/Promotions/Index">Khuyến mãi</a>
                                <span class="text-primary px-2">|</span>
                                <a class="text-black text-uppercase text-decoration-none" href="">@Model.Discount.Name</a>
                            </div>
                            <div class="position-relative">
                                <img class="img-fluid w-100" src="@Model.News.Image" alt="">
                                <div class="blog-date">
                                    <h6 class="font-weight-bold text-white mb-n1">
                                        @Model.News.UploadDate.Value.ToString("dd/MM")
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3 bg-white" style="padding: 30px;">
                            <h2 class="mb-3">@Model.News.Title</h2>
                            @if (Model.Discount.IsAvailable == false)
                            {
                                <p class="text-primary">(Khuyến mãi đã hết hiệu lực)</p>
                            }
                            else
                            {
                                <p class="text-primary">
                                    Khuyến mãi được áp dụng từ ngày
                                    @Model.Discount.StartDate.Value.ToString("dd/MM") đến ngày
                                    @Model.Discount.EndDate.Value.ToString("dd/MM")
                                </p>
                            }
                            <p>
                                @Model.News.Description
                            </p>
                        </div>
                    </div>
                }
                else if (Model.Discount != null && Model.News == null)
                {
                    <div class="pb-3">
                        <div class="">
                            <div class="d-flex m-3">
                                <a class="text-primary text-uppercase text-decoration-none" asp-page="/Promotions/Index">Khuyến mãi</a>
                                <span class="text-primary px-2">|</span>
                                <a class="text-black text-uppercase text-decoration-none" href="">@Model.Discount.Name</a>
                            </div>
                        </div>
                        <div class="mb-3 bg-white" style="padding: 30px;">
                            <h2 class="mb-3">@Model.Discount.Name</h2>
                            @if (Model.Discount.IsAvailable == false)
                            {
                                <p class="text-primary">(Khuyến mãi đã hết hiệu lực)</p>
                            }
                            else
                            {
                                <p class="text-primary">
                                    Khuyến mãi được áp dụng từ ngày
                                    @Model.Discount.StartDate.Value.ToString("dd/MM") đến ngày
                                    @Model.Discount.EndDate.Value.ToString("dd/MM")
                                </p>
                            }
                            <p>
                                @Model.Discount.Description
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-primary">
                        @Model.Message
                    </p>
                }
                <!-- News Detail End -->
            </div>
            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px; padding-top: 3rem;">Khuyến mãi khác</h4>
                    @foreach (DiscountDTO d in Model.DiscountDtos)
                    {
                        <a class="d-flex align-items-center text-decoration-none bg-white mb-3" asp-route-Code="@d.Code">
                            <div class="p-3 m-1">
                                <h6>@d.Name</h6>
                                <small>
                                    @d.StartDate.Value.ToString("dd/MM/yyyy") - @d.EndDate.Value.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- News End -->
<!-- Promotions End -->
