@page
@model GHCW_FE.Pages.Authentications.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="/img/carousel-1.jpg" alt="Banner Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-4">
                                <div class="bg-white-opacity p-4 rounded">
                                    <h2 class="text-center mt-5">Quên mật khẩu</h2>
                                    <form action="/login" method="POST">
                                        <div class="form-group">
                                            <label for="email" style="text-align: center">Vui lòng nhập email đăng nhập của bạn. Chúng tôi sẽ gửi mật khẩu mới.</label>
                                            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block">Gửi Email</button>
                                    </form>
                                    <p class="text-center mt-3">
                                        <a href="/Authentications/Login" style="color:black">Quay lại cửa sổ đăng nhập</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->

<style>
    /* CSS cho nền màu trắng với opacity 50% */
    .bg-white-opacity {
        background-color: rgba(255, 255, 255, 0.9); /* Nền trắng với độ trong suốt 50% */
        border-radius: 10px;
        padding: 20px;
    }

    .form-group {
        color: black;
        text-align: left;
    }
</style>
